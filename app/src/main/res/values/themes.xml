<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LoonieTunes" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.LoonieTunes" parent="Base.Theme.LoonieTunes" />

    <!-- light mode -->
    <!-- screen background -->
    <style name="splash">
        <item name="android:background">@color/lightgray</item>
    </style>

    <style name="screenbg">
        <item name="android:background">@drawable/lightmodebg</item>
    </style>

    <!-- text background -->
    <style name="bold">
        <item name="android:textColor">#000</item>
        <item name="fontFamily">@font/araboto_bold_400</item>
    </style>

    <style name="normal">
        <item name="android:textColor">#000</item>
        <item name="fontFamily">@font/araboto_normal_400</item>
    </style>

    <style name="medium">
        <item name="android:textColor">#000</item>
        <item name="fontFamily">@font/araboto_medium_400</item>
    </style>

    <!-- button background -->
    <style name="button">
        <item name="android:backgroundTint">@color/buttonlight</item>
        <item name="android:textColor">#000</item>
        <item name="fontFamily">@font/araboto_black_400</item>
    </style>

    <style name="play">
        <item name="android:background">@drawable/play_light</item>
    </style>

    <style name="pause">
        <item name="android:background">@drawable/pause_light</item>
    </style>

    <style name="previous">
        <item name="android:background">@drawable/previous_light</item>
    </style>

    <style name="next">
        <item name="android:background">@drawable/next_light</item>
    </style>

    <style name="dots">
        <item name="android:background">@drawable/dots_light</item>
    </style>

    <style name="seekbar">
        <item name="android:backgroundTint">@color/black</item> <!-- This sets the thumb color -->
    </style>

    <style name="heart">
        <item name="android:background">@drawable/heart_broken</item>
        <item name="backgroundTint">@color/black</item>
    </style>



</resources>